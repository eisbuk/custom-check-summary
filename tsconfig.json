{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "",
    "target": "es5",
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "./.eslintrc.js"]
}
